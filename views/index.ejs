<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Link</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% portfolio.forEach((portfolio, index) => { %>
                        <tr>
                            <th scope="row"><%= portfolio.id %></th>
                            <td><img src="/assets/img/<%= portfolio.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= portfolio.name %></td>
                            <td><%= portfolio.description%></td>
                            <td><%= portfolio.link %></td>
                            <td>
                                <a href="/edit/<%= portfolio.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= portfolio.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>